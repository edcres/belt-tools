<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.StartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/sqr_foot_In_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/get_sqr_ft_in"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/sqr_ft_in_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/sqr_foot_In_txt"
                        tools:layout_editor_absoluteX="5dp">

                        <EditText
                            android:id="@+id/sqrt_width_et"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/width"
                            android:importantForAutofill="no"
                            android:inputType="number|numberDecimal" />

                        <EditText
                            android:id="@+id/sqrt_length_et"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/length"
                            android:importantForAutofill="no"
                            android:inputType="number|numberDecimal" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/sqr_per_room_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sqr_per_room_btn"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintEnd_toEndOf="@+id/sqr_foot_In_txt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sqr_ft_in_layout" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/num_boxes_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/number_of_boxes"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linear_layout_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/num_boxes_txt">

                        <EditText
                            android:id="@+id/home_sqr_ft"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/total_sqr_ft"
                            android:inputType="number|numberDecimal" />

                        <EditText
                            android:id="@+id/box_sqr_ft"
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/box_sqr_ft"
                            android:inputType="number|numberDecimal" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/tile_box_results_btn"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        android:text="@string/tile_box_results_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linear_layout_2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/sqr_foot_to_sqr_in_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="14sp"
                        android:text="@string/sqr_ft_to_sqr_in"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/sqr_foot_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/sqr_ft"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintEnd_toStartOf="@+id/sqr_foot_to_sqr_in_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sqr_foot_to_sqr_in_txt" />

                    <Button
                        android:id="@+id/sqr_foot_to_sqr_in_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/both_ways_arrow"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintBottom_toBottomOf="@+id/sqr_in_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sqr_foot_to_sqr_in_txt" />

                    <EditText
                        android:id="@+id/sqr_in_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/sqr_in"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/sqr_foot_to_sqr_in_btn"
                        app:layout_constraintTop_toBottomOf="@+id/sqr_foot_to_sqr_in_txt" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/cut_blind_width_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cut_blind_width"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/window_width_et"
                        android:layout_width="106dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/opening"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cut_blind_width_txt" />

                    <EditText
                        android:id="@+id/blind_width_et"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/blind"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintStart_toEndOf="@+id/window_width_et"
                        app:layout_constraintTop_toBottomOf="@+id/cut_blind_width_txt" />

                    <Button
                        android:id="@+id/blind_width_equals_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="@string/equals_symbol"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintBottom_toBottomOf="@+id/blind_width_et"
                        app:layout_constraintStart_toEndOf="@+id/blind_width_et"
                        app:layout_constraintTop_toBottomOf="@+id/cut_blind_width_txt" />

                    <TextView
                        android:id="@+id/blind_width_result_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_marginStart="16dp"
                        android:text="@string/zero"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/blind_width_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/blind_width_equals_btn"
                        app:layout_constraintTop_toBottomOf="@+id/cut_blind_width_txt" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/decimal_to_fraction_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/decimal_to_fraction"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/decimal_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/decimal"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintEnd_toStartOf="@+id/decimal_to_fraction_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/decimal_to_fraction_txt" />

                    <Button
                        android:id="@+id/decimal_to_fraction_btn"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="@string/both_ways_arrow"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintBottom_toBottomOf="@+id/decimal_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/decimal_to_fraction_txt" />

                    <EditText
                        android:id="@+id/fraction_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/fraction"
                        android:inputType="date"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/decimal_to_fraction_btn"
                        app:layout_constraintTop_toBottomOf="@+id/decimal_to_fraction_txt" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lineal_ft_to_sqr_yd_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lineal_ft_to_sqr_yard"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/lineal_ft_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/lineal_feet"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintEnd_toStartOf="@+id/lineal_ft_to_sqr_yard_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineal_ft_to_sqr_yd_txt" />

                    <Button
                        android:id="@+id/lineal_ft_to_sqr_yard_btn"
                        android:layout_width="111dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/both_ways_arrow"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineal_ft_to_sqr_yd_txt" />

                    <EditText
                        android:id="@+id/sqr_yard_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/sqr_yard"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/lineal_ft_to_sqr_yard_btn"
                        app:layout_constraintTop_toBottomOf="@+id/lineal_ft_to_sqr_yd_txt" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/sqr_ft_price_title_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sqr_ft_price"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/box_price_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="5"
                        android:gravity="center"
                        android:hint="@string/box_price"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/sqr_ft_price_title_txt" />

                    <EditText
                        android:id="@+id/box_sqr_ft_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="5"
                        android:gravity="center"
                        android:hint="@string/box_sqr_ft"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintStart_toEndOf="@+id/box_price_et"
                        app:layout_constraintTop_toTopOf="@+id/box_price_et" />

                    <Button
                        android:id="@+id/sqr_ft_price_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="@string/equals_symbol"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintBottom_toBottomOf="@+id/box_price_et"
                        app:layout_constraintStart_toEndOf="@+id/box_sqr_ft_et"
                        app:layout_constraintTop_toTopOf="@+id/box_price_et" />

                    <TextView
                        android:id="@+id/sqr_ft_price_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:gravity="start"
                        android:text="@string/zero"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/box_price_et"
                        app:layout_constraintEnd_toEndOf="@+id/sqr_ft_price_title_txt"
                        app:layout_constraintStart_toEndOf="@+id/sqr_ft_price_btn"
                        app:layout_constraintTop_toTopOf="@+id/box_price_et" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/vertical_louver_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/n_vertical_louvers"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <EditText
                        android:id="@+id/v_blind_width_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="@string/blind_width"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintBottom_toBottomOf="@+id/num_of_louvers_equals_btn"
                        app:layout_constraintEnd_toStartOf="@+id/num_of_louvers_equals_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/num_of_louvers_equals_btn" />

                    <Button
                        android:id="@+id/num_of_louvers_equals_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/equals_symbol"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintEnd_toEndOf="@+id/vertical_louver_txt"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vertical_louver_txt" />

                    <TextView
                        android:id="@+id/num_of_louvers_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/num_of_louvers_equals_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/num_of_louvers_equals_btn"
                        app:layout_constraintTop_toTopOf="@+id/num_of_louvers_equals_btn" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/lineal_bk_sh_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lineal_backsplash"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/bak_sh_width_et"
                        android:layout_width="113dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/width_12_in"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineal_bk_sh_txt" />

                    <EditText
                        android:id="@+id/lineal_space_et"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/lineal_space"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintStart_toEndOf="@+id/bak_sh_width_et"
                        app:layout_constraintTop_toBottomOf="@+id/lineal_bk_sh_txt" />

                    <ToggleButton
                        android:id="@+id/bak_sh_toggle_btn"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lineSpacingExtra="10sp"
                        android:textAllCaps="false"
                        android:textOff="@string/ft."
                        android:textOn="@string/in."
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/lineal_space_et"
                        app:layout_constraintStart_toEndOf="@+id/lineal_space_et"
                        app:layout_constraintTop_toTopOf="@+id/lineal_space_et" />

                    <EditText
                        android:id="@+id/cut_outs_et"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="@string/cut_outs"
                        android:inputType="number|numberDecimal"
                        app:layout_constraintEnd_toStartOf="@+id/bak_sh_equals_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/bak_sh_width_et" />

                    <Button
                        android:id="@+id/bak_sh_equals_btn"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/equals_symbol"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintBottom_toBottomOf="@+id/cut_outs_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lineal_space_et" />

                    <TextView
                        android:id="@+id/bak_sh_results_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/cut_outs_et"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/bak_sh_equals_btn"
                        app:layout_constraintTop_toTopOf="@+id/cut_outs_et" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/fading_background"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/locate_magnet_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/locate_magnet"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/new_magnet_location_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="@string/new_location"
                        android:inputType="date"
                        app:layout_constraintBottom_toBottomOf="@+id/magnet_location_save_btn"
                        app:layout_constraintEnd_toStartOf="@+id/magnet_location_save_btn"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/magnet_location_save_btn" />

                    <Button
                        android:id="@+id/magnet_location_save_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:text="@string/save"
                        android:textColor="@color/black"
                        android:backgroundTint="@color/action_btn_color"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/locate_magnet_txt" />

                    <TextView
                        android:id="@+id/last_magnet_location_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:gravity="start"
                        android:text="@string/zero"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="@+id/magnet_location_save_btn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/magnet_location_save_btn"
                        app:layout_constraintTop_toTopOf="@+id/magnet_location_save_btn" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
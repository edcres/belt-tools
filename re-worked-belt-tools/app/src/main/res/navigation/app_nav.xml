<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.belttools.ui.fragments.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_departmentExtensionFragment"
            app:destination="@id/departmentExtensionFragment" />
        <action
            android:id="@+id/action_startFragment_to_itemsToWorkOnFragment"
            app:destination="@id/itemsToWorkOnFragment" />
        <action
            android:id="@+id/action_startFragment_to_specialtyOrdersFragment"
            app:destination="@id/specialtyOrdersFragment" />
        <action
            android:id="@+id/action_startFragment_to_departmentNotesFragment"
            app:destination="@id/departmentNotesFragment" />
    </fragment>
    <fragment
        android:id="@+id/departmentExtensionFragment"
        android:name="com.example.belttools.ui.fragments.DepartmentExtensionFragment"
        android:label="fragment_department_extension"
        tools:layout="@layout/fragment_department_extension" />
    <fragment
        android:id="@+id/specialtyOrdersFragment"
        android:name="com.example.belttools.ui.fragments.SpecialtyOrdersFragment"
        android:label="fragment_specialty_orders"
        tools:layout="@layout/fragment_specialty_orders" />
    <fragment
        android:id="@+id/itemsToWorkOnFragment"
        android:name="com.example.belttools.ui.fragments.ItemsToWorkOnFragment"
        android:label="fragment_items_to_work_on"
        tools:layout="@layout/fragment_items_to_work_on" />
    <fragment
        android:id="@+id/departmentNotesFragment"
        android:name="com.example.belttools.ui.fragments.DepartmentNotesFragment"
        android:label="fragment_department_notes"
        tools:layout="@layout/fragment_department_notes" />
</navigation>